{
  "name": "bunpress",
  "version": "0.1.0",
  "description": "A static site generator built with Bun",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "bunpress": "./bin/bunpress.js"
  },
  "files": [
    "dist",
    "bin",
    "types",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./types/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./types/core/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "types": "./types/plugins/index.d.ts"
    },
    "./lib": {
      "import": "./dist/lib/index.js",
      "types": "./types/lib/index.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:watch": "bun run scripts/dev-watch.js",
    "build": "bun build src/index.ts --outdir dist --target bun && bun build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir types --skipLibCheck --noUnusedLocals false --noUnusedParameters false",
    "clean": "rm -rf dist types",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bun scripts/typecheck.js",
    "lint:strict": "tsc --noEmit",
    "knip": "knip",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "cleanup": "bun scripts/cleanup.js",
    "deepclean": "bun cleanup-project.js",
    "ci": "bun run lint && bun test && bun run build"
  },
  "keywords": [
    "bun",
    "static-site-generator",
    "markdown",
    "plugins",
    "ssg",
    "website"
  ],
  "author": "BunPress Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bun-press/bunpress.git"
  },
  "bugs": {
    "url": "https://github.com/bun-press/bunpress/issues"
  },
  "homepage": "https://bunpress.dev",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsdom": "^21.1.7",
    "@types/markdown-it-container": "^2.0.10",
    "@types/node": "^22.13.13",
    "@types/open": "^6.2.1",
    "@types/prismjs": "^1.26.5",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^17.4.4",
    "jsdom": "^26.0.0",
    "knip": "^5.46.0",
    "open": "^10.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.0.15",
    "typescript": "^5.8.2",
    "ws": "^8.18.1"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-hover-card": "^1.1.6",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "chalk": "^5.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "gray-matter": "^4.0.3",
    "listr2": "^8.2.5",
    "lucide-react": "^0.484.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-container": "^4.0.0",
    "markdown-it-highlightjs": "^4.0.1",
    "markdown-it-toc-done-right": "^4.2.0",
    "marked": "^15.0.7",
    "prismjs": "^1.29.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^3.0.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}