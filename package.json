{
  "name": "bunpress",
  "version": "0.1.0",
  "description": "A static site generator built with Bun",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "bunpress": "./bin/bunpress.js"
  },
  "files": [
    "dist",
    "bin",
    "types",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./types/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./types/core/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "types": "./types/plugins/index.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node && bun build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir types",
    "prepublishOnly": "bun run clean && bun run build",
    "clean": "rm -rf dist types",
    "test": "bun test"
  },
  "keywords": [
    "bun",
    "static-site-generator",
    "markdown",
    "plugins",
    "ssg",
    "website"
  ],
  "author": "BunPress Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bun-press/bunpress.git"
  },
  "bugs": {
    "url": "https://github.com/bun-press/bunpress/issues"
  },
  "homepage": "https://bunpress.dev",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.15",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-hover-card": "^1.1.6",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@types/markdown-it": "^14.1.2",
    "@types/sharp": "^0.32.0",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "gray-matter": "^4.0.3",
    "listr2": "^8.2.5",
    "lucide-react": "^0.483.0",
    "markdown-it": "^14.1.0",
    "marked": "^15.0.7",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shadcn-ui": "^0.9.5",
    "sharp": "^0.33.5",
    "tailwind-merge": "^3.0.2",
    "tw-animate-css": "^1.2.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}